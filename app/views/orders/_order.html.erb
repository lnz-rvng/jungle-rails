<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="3">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td>
          <%= image_tag line_item.product.image.tiny.url %>
        </td>
        <td colspan="2">
          <h3> <%= line_item.product.name %> </h3>
          <p> <%= line_item.product.description %> </p>
        </td>

        <td>
          <%= humanized_money_with_symbol line_item.product.price %>
        </td>

        <td>
          <%= line_item.quantity %>
        </td>

        <td>
          <%= humanized_money_with_symbol line_item.total_price%>
        </td>
      </tr>
      <% end %>
    </tbody>

  <tfoot>
    <tr>
      <th colspan="5">TOTAL:</th>
      <th> <%= humanized_money_with_symbol order.total_cents / 100.0 %> </th>
    </tr>
  </tfoot>
</table>
